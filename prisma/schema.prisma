// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String
  role     Role   @default(BUYER)
  avatar   Bytes?

  @@map("users")
}

enum Role {
  BUYER
  RETAILER
  ADMIN
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  price       Float
  Stock       Int     @default(0)
  description String? @db.LongText
}
